<style>
    .header-middle {
        background-color: rgba(0,0,0,0.1)
    }
</style>
<div class="header-middle">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-3 col-7">
                <!-- Start Header Logo -->
                <a class="navbar-brand" asp-action="Index" asp-controller="HomePage">
                    <img src="~/shopgrids/assets/images/logo/logo.png" alt="Logo">
                </a>
                <!-- End Header Logo -->
            </div>
            <div class="col-lg-5 col-md-7 d-xs-none">
                <!-- Start Main Menu Search -->
                <form method="post" asp-action="Search" asp-controller="Search">
                    <div class="main-menu-search">
                        <!-- navbar search start -->
                        <div class="navbar-search search-style-5">
                            <div class="search-input">
                                <input type="text" name="key" placeholder="Search">
                            </div>
                            <div class="search-btn">
                                <button type="submit"><i class="lni lni-search-alt"></i></button>
                            </div>
                        </div>
                        <!-- navbar search Ends -->
                    </div>
                </form>
                <!-- End Main Menu Search -->
            </div>
            <div class="col-lg-4 col-md-2 col-5">
                <div class="middle-right-area">
                    <div class="nav-hotline">
                        <i class="lni lni-phone"></i>
                        <h3>
                            Hotline:
                            <span>(+994) 55 555 55 55</span>
                        </h3>
                    </div>
                    @*      <div class="navbar-cart">
                    <div class="wishlist">
                    <a asp-action="Index" asp-controller="User">
                    <i class="lni lni-user"></i>
                    </a>
                    </div>
                    <div class="wishlist">
                    <a asp-action="Checkouthistory" asp-controller="Order">
                    <i class="lni lni-checkmark-circle"></i>
                    </a>
                    </div>
                    <div class="cart-items">
                    <a asp-action="Index" asp-controller="Basket" class="main-btn">
                    <i class="lni lni-cart"></i>
                    <span class="total-items">2</span>
                    </a>
                    </div>
                    </div> *@
              <style>
                        .navbar-cart{
                            justify-content: center;
                            align-items: center;
                            display:flex;
                        }
                  .navbar-cart ul{

                      justify-content:center;
                      align-items:center;
                      font-size:10px;
                  }
              </style>
                    <div class="navbar-cart">
                        <div class="user d-flex">
                           
                            @if (User.Identity.IsAuthenticated)
                            {
                                <i class="lni lni-user me-1" style="padding-top:5px"></i>
                                <b><i><h5>@User.Identity.Name</h5></i></b>
                            }
                            else
                            {
                                <i class="lni lni-user me-1" ></i>

                                <span></span>
                            }
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="user-login ms-3">
                                <li>
                                    <a asp-action="SignOut" asp-controller="Auth" class="text-sm-start btn btn-danger"><b><i>Sign Out</i></b></a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="user-login d-flex ms-3">
                                <li>
                                    <a asp-action="SignIn" asp-controller="Auth" class="btn btn-primary"><b><i>Sign In</i></b></a>
                                </li>
                                <li class="ms-1">
                                    <a asp-action="SignUp" asp-controller="Auth" class="btn btn-info"><b><i>Register</i></b></a>
                                </li>
                            </ul>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
