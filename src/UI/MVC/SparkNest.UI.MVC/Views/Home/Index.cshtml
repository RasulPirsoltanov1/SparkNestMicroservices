@using SparkNest.UI.MVC.Models.Product
@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

@model List<ProductVM>
<h2>Products</h2>
<hr />

@if (Model is not null)

{

    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")
        }
        <div class="col">
            <div class="card">
                <img src="@item.PhotoFileStockUrl" class="card-img-top" width="200px" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary">Kategori : @item.Category.Name</div>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>

                    <div>
                        <a asp-controller="Home" asp-action="Detail" class="btn btn-success" asp-route-id="@item.Id">Details...</a>
                        @* <a asp-controller="Basket" asp-action="Test" class="btn btn-success" asp-route-id="@item.Id">Test...</a> *@
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }

    }
}