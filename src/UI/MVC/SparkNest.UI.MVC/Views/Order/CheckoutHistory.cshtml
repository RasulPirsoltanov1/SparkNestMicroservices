@using SparkNest.UI.MVC.Models.Orders
@model List<OrderVM>
@{
    ViewData["Title"] = "CheckoutHistory";
}

<section class="checkout-wrapper section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">My Payment History</h5>

                                @if (Model.Any())
                                {
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th>Order(Payment) No</th>
                                            <th>Purchase Date</th>
                                            <th>Details</th>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.CreatedDate.ToShortDateString()</td>
                                                <td>
                                                    <table class="table table-striped">
                                                        <tr>
                                                            <th>Product Name</th>
                                                            <th>Price</th>
                                                            <th>Count</th>
                                                            <th>Total</th>
                                                        </tr>
                                                        @foreach (var orderItem in item.OrderItems)
                                                        {
                                                            <tr>
                                                                <td>@orderItem.ProductName</td>
                                                                <td>@orderItem.Price AZN</td>
                                                                <td>@(orderItem.Quantity == 0 ? 1 : orderItem.Quantity) </td>
                                                                <td>@((orderItem.Quantity == 0 ? 1 : orderItem.Quantity) * orderItem.Price) AZN</td>
                                                            </tr>
                                                        }
                                                    </table>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                                else
                                {
                                    <div  style="background-color:rgba(200,50,0,0.5);padding:40px; border-radius:10px; margin:20px; text-align:center; color:white; font-size:35px">You haven't purchased any courses yet.</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
