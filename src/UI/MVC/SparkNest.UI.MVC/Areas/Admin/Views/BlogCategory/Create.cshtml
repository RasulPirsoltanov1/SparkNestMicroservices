@using SparkNest.UI.MVC.Application.DTOs.Blog
@using SparkNest.UI.MVC.Models.Product
@model BlogCategoryCreateDTO


<h1>Create Category</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data" asp-area="Admin" asp-controller="BlogCategory" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3 float-end" />
            </div>
        </form>
    </div>
</div>

